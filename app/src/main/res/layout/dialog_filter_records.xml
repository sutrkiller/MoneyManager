<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <TextView
        android:id="@+id/filterRecords_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="24sp"
        android:text="Filter records"/>


    <Spinner
        android:id="@+id/filterRecords_orderBy"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/filterRecords_title"
        android:layout_marginTop="0dp"
        />

    <TextView
        android:id="@+id/filterRecords_orderBy_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/filterRecords_title"
        android:layout_alignParentLeft="true"
        android:textColor="@color/colorAccent"
        android:text="Order by:"
        android:layout_marginTop="14dp"
        />

    <Spinner
        android:id="@+id/filterRecords_direction"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/filterRecords_orderBy"
        android:layout_marginTop="0dp"/>

    <TextView
        android:id="@+id/filterRecords_direction_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/filterRecords_orderBy"
        android:layout_alignParentLeft="true"
        android:textColor="@color/colorAccent"
        android:text="Direction:"
        android:layout_marginTop="14dp"
        />

    <!--<Spinner-->
