<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <TextView
        android:id="@+id/filterCategories_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/filter_categories"
        android:textSize="24sp" />


    <Spinner
        android:id="@+id/filterCategories_orderBy"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/filterCategories_title"
        android:layout_marginTop="0dp"
        />

    <TextView
        android:id="@+id/filterCategories_orderBy_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/filterCategories_title"
        android:layout_marginTop="14dp"
        android:text="@string/order_by"
        android:textColor="@color/colorAccent"
        />

    <Spinner
        android:id="@+id/filterCategories_direction"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/filterCategories_orderBy"
        android:layout_marginTop="0dp"/>

    <TextView
        android:id="@+id/filterCategories_direction_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/filterCategories_orderBy"
        android:layout_marginTop="14dp"
        android:text="@string/direction"
        android:textColor="@color/colorAccent"
        />



</RelativeLayout>