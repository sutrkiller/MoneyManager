<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:orientation="vertical"

    >

    <ImageView
        android:id="@+id/record_item_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:contentDescription="@string/value_sign" />



    <TextView
        android:id="@+id/record_item_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:fontFamily="Roboto Regular"
        android:paddingTop="16dp"
        android:textSize="16sp"

        />


    <TextView
        android:id="@+id/record_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/record_item_value"
        android:layout_marginEnd="16dp"
        android:paddingTop="16dp"
        />

    <TextView
        android:id="@+id/record_item_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/record_item_value"
        android:layout_below="@id/record_item_value"
        android:layout_marginTop="2dp"/>

    <TextView
        android:id="@+id/record_item_category_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/record_item_item"
        android:layout_marginEnd="16dp"
        />


</RelativeLayout>