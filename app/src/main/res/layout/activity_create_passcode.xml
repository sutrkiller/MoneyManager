        <!--android:layout_marginTop="52dp"/>-->

    <!--<EditText-->
        <!--android:id="@+id/editTextConfirm"-->
        <!--style="@style/pinEditText"-->
        <!--android:layout_below="@+id/editTextEntry"-->
        <!--android:layout_marginTop="41dp"/>-->

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/editTextEntry"
        style="@style/materialEditText.pin"
        app:met_floatingLabelText="Enter your pin"
        android:hint="Enter your pin"

        app:met_primaryColor="@color/colorAccent"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelTextSize="14sp"/>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/editTextConfirm"
        style="@style/materialEditText.pin"
        android:layout_below="@+id/editTextEntry"
        app:met_floatingLabelText="Confirm your pin"
        android:hint="Confirm your pin"
        android:layout_marginTop="24dp"
        app:met_primaryColor="@color/colorAccent"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelTextSize="14sp"/>


    <Button
        android:id="@+id/buttonCreatePin"
        android:layout_width="128dp"
        android:layout_height="48dp"
        android:elevation="2dp"
        android:padding="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="32dp"

        android:textAllCaps="true"
        android:minWidth="88dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/editTextConfirm"
        android:onClick="createPinOnClick"
        android:text="Create pin"

        />

</RelativeLayout>
