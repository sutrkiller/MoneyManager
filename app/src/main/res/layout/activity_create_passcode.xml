<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/vertical_black_white_radient_backgroud"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context=".crypto.CreatePasscodeActivity">

    <EditText
        android:id="@+id/editTextEntry"
        style="@style/pinEditText"
        android:layout_alignParentTop="true"
        android:layout_marginTop="52dp"/>

    <EditText
        android:id="@+id/editTextConfirm"
        style="@style/pinEditText"
        android:layout_below="@+id/editTextEntry"
        android:layout_marginTop="41dp"/>

    <Button
        android:id="@+id/buttonCreatePin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/editTextConfirm"
        android:layout_alignStart="@+id/editTextConfirm"
        android:layout_below="@+id/editTextConfirm"
        android:layout_marginTop="76dp"
        android:background="@drawable/margin"
        android:hint="Ex. 1234"
        android:onClick="createPinOnClick"
        android:text="Create pin" />


</RelativeLayout>
