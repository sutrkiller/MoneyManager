<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
android:paddingTop="4dp"
android:paddingBottom="4dp"
    >

    <TextView
        android:id="@+id/stats_item_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:paddingStart="?android:attr/expandableListPreferredChildPaddingLeft"
        android:paddingEnd="8dp"
        android:paddingTop="8dp"
        android:fontFamily="Roboto Regular"
        android:textSize="16sp"

        />


    <TextView
        android:id="@+id/stats_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/stats_item_value"
        android:layout_marginEnd="16dp"
        android:paddingTop="8dp"
        />

    <TextView
        android:id="@+id/stats_item_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/stats_item_value"
        android:paddingStart="?android:attr/expandableListPreferredChildPaddingLeft"
        android:paddingEnd="8dp"
        android:layout_below="@id/stats_item_value"
        android:textSize="14sp"
        android:layout_marginTop="2dp"/>

    <TextView
        android:id="@+id/stats_item_category_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/stats_item_item"
        android:layout_marginEnd="16dp"
        />


</RelativeLayout>