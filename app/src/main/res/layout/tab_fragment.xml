<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView

        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/black_box"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary">

        </TextView>
    <ImageView
        android:id="@+id/tab_divider_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date"
        android:layout_marginTop="-8dp"

        android:paddingEnd="80dp"
        android:paddingStart="80dp"
        android:contentDescription="@string/divider"
        android:src="@drawable/divider_pink" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/date"
        android:layout_marginTop="16dp">
        <RelativeLayout
            android:id="@+id/gridViewScreenStats"
            android:layout_width="match_parent"

            android:layout_height="wrap_content">

            <Space
                android:id="@+id/space"
                android:layout_width="10dp"
                android:layout_height="200dp" />

            <com.jjoe64.graphview.GraphView
                android:id="@+id/graph"
                android:layout_width="fill_parent"
                android:layout_height="200dp"
                android:layout_marginEnd="10dp"
                android:layout_toEndOf="@+id/space" />

            <GridLayout
                android:id="@+id/stats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/graph"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/box"
                android:columnCount="2"
                android:orientation="vertical"
                android:padding="5dp"
                android:rowCount="4">

                <TextView
                    android:id="@+id/startBalanceLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_gravity="fill_horizontal"
                    android:layout_row="0"
                    android:paddingEnd="8dp"
                    android:paddingStart="8dp"
                    android:text="@string/starting_balance"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <TextView
                    android:id="@+id/startBalance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_gravity="end"
                    android:layout_row="0"
                    android:gravity="end"
                    android:paddingEnd="8dp"
                    android:paddingStart="8dp"
                    android:text=""
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <TextView
                    android:id="@+id/endBalanceLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_gravity="fill_horizontal"
                    android:layout_row="1"
                    android:paddingEnd="8dp"
                    android:paddingStart="8dp"
                    android:text="@string/ending_balance"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <TextView
                    android:id="@+id/endBalance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_gravity="end"
                    android:layout_row="1"
                    android:gravity="end"
                    android:paddingEnd="8dp"
                    android:paddingStart="8dp"
                    android:text=""
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <TextView
                    android:id="@+id/incomeStats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_gravity="fill_horizontal"
                    android:layout_row="2"
                    android:paddingEnd="8dp"
                    android:paddingStart="8dp"
                    android:text="@string/incomes"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <TextView
                    android:id="@+id/incomeSumStats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_gravity="end"
                    android:layout_row="2"
                    android:gravity="end"
                    android:paddingEnd="8dp"
                    android:paddingStart="8dp"
                    android:text=""
                    android:textAlignment="textEnd"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/recordPositiveValue" />

                <TextView
                    android:id="@+id/expenseStats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_gravity="fill_horizontal"
                    android:layout_row="3"
                    android:paddingEnd="8dp"
                    android:paddingStart="8dp"
                    android:text="@string/expenses"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <TextView
                    android:id="@+id/expenseSumStats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_gravity="end"
                    android:layout_row="3"
                    android:gravity="end"
                    android:paddingEnd="8dp"
                    android:paddingStart="8dp"
                    android:text=""
                    android:textAlignment="textEnd"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/recordNegativeValue" />
            </GridLayout>
            <!-- Income records -->
            <TextView
                android:id="@+id/incomeList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/stats"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:text="@string/incomes"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <ListView
                android:id="@+id/listViewIncomeStats"
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:layout_below="@id/incomeList"
                android:layout_margin="10dp"
                android:background="@drawable/box"
                android:nestedScrollingEnabled="true"/>

            <!-- Expenses records -->
            <TextView
                android:id="@+id/expensesList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/listViewIncomeStats"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:text="@string/expenses"
                android:textAppearance="?android:attr/textAppearanceLarge" />
            <ListView
                android:id="@+id/listViewExpences"
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:layout_below="@+id/expensesList"
                android:layout_margin="10dp"
                android:background="@drawable/box"
                android:nestedScrollingEnabled="true"/>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>