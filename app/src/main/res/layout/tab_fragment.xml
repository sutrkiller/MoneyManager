<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView

        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/black_box"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary">

        </TextView>
    <ImageView
        android:id="@+id/tab_divider_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date"
        android:layout_marginTop="-8dp"

        android:paddingEnd="80dp"
        android:paddingStart="80dp"
        android:contentDescription="@string/divider"
        android:src="@drawable/divider_pink" />


            <ExpandableListView
                android:id="@+id/stats_expandableList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:indicatorLeft="?android:attr/expandableListPreferredChildIndicatorLeft"
                android:divider="@color/colorPrimaryDark"
                android:dividerHeight="0.5dp"
                android:minHeight="400dp"
                android:fastScrollEnabled="true"
                android:footerDividersEnabled="true"
                android:layout_below="@id/date">

            </ExpandableListView>


</RelativeLayout>